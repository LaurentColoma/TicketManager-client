                <div class="panel panel-warning"
                     dnd-sortable-container [sortableData]="container.tickets" [dropZones]="['ticket-dropZone']">
                    <div class="panel-heading">
                        {{ container.id }} - {{ container.name }}
                    </div>
                    <div class="panel-body">
                        <ul class="list-group" >
                            <li class="list-group-item" *ngFor="let ticket of container.tickets; let j = index"
                            [sortableIndex]="j" [dragData]="ticket" dnd-sortable [dragEnabled]="!dragOperation" (drag)="onDrag(ticket)"
                                (drop)="updateStatus(this.draggedTicket, container.name); updateSprint(this.draggedTicket, 'TDB')">
